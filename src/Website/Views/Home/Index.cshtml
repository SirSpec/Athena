@model HomeViewModel

@section Styles
{
<link rel="stylesheet" href="/css/card-teaser.css" asp-append-version="true" />
}

@if(Model is not null)
{
    <section>
        <div class="terminal-timeline">
            @foreach (var postTeaser in Model.PostTeasers)
            {
                @await Html.PartialAsync("_PostTeaser", postTeaser)

                @if (postTeaser != Model.PostTeasers.Last())
                {
                    <hr>
                }
            }
        </div>
    </section>
}